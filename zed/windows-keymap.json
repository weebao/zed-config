
// Zed keymap

//

// For information on binding keys, see the Zed

// documentation: https://zed.dev/docs/key-bindings

//

// To see the default key bindings run `zed: open default keymap`

// from the command palette.
[
  {
    "bindings": {
      "shift shift": "file_finder::Toggle",
      "ctrl-o": "workspace::Open",
      "ctrl-alt-o": [
        "projects::OpenRecent",
        { "create_new_window": true }
      ]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-l": "workspace::ActivatePaneRight",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-d": "vim::ScrollDown",
      "alt-u": "vim::ScrollUp",
      "alt-\\": "editor::AcceptEditPrediction",
      "alt-shift-j": "editor::DuplicateLineDown",
      "alt-shift-k": "editor::DuplicateLineUp"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "alt-j": "editor::MoveLineUp",
      "alt-k": "editor::MoveLineDown",
      "shift-l": "tab_switcher::Toggle",
      "space e": "workspace::ToggleLeftDock",
      "space f": "editor::Format",
      "space v": "pane::SplitRight",
      "space w": "pane::CloseActiveItem",
      "space l": "editor::ToggleSoftWrap",
      "space k": "zed::OpenKeymapFile",
      "space r": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "alt-c": "vim::SwitchToNormalMode"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "shift-l": "tab_switcher::Toggle",
      "space e": "workspace::ToggleLeftDock",
      "space f": "editor::Format",
      "space v": "pane::SplitRight",
      "space w": "pane::CloseActiveItem"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-shift-`": "workspace::NewTerminal"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-l": "workspace::ActivatePaneRight",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-shift-k": "terminal::ScrollLineUp",
      "ctrl-shift-j": "terminal::ScrollLineDown"
    }
  }
]


